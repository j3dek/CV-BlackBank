@model BlackBank.Models.FormularzPomocyViewModel

@{
    ViewData["HideSidebar"] = true;
}

@{
    ViewData["Title"] = "Pomoc";
    Layout = "_ProfileLayout";
}

<link rel="stylesheet" href="~/css/pomoc.css" />

<div class="profile-header mb-4">
    <h1 class="profile-title"><i class="fas fa-question-circle me-2"></i>Centrum pomocy</h1>
    <p class="text-muted">Masz pytanie lub problem? Skontaktuj się z nami!</p>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["NumerZgloszenia"] != null)
{
    <div class="alert alert-info mt-4" role="alert">
        <i class="fas fa-info-circle me-2"></i>
        Dziękujemy za zgłoszenie. Twój numer sprawy: <strong>#@TempData["NumerZgloszenia"]</strong>. Odpowiemy w ciągu 24h.
    </div>
}

<div class="row">
    <div class="col-md-6 mb-4">
        <div class="card dashboard-card h-100">
            <div class="card-header banking-card-header">
                <i class="fas fa-info-circle me-2"></i>Dane kontaktowe
            </div>
            <div class="card-body">
                <p><i class="fas fa-envelope me-2"></i>Email: <a href="mailto:pomoc@blackbank.pl">pomoc@blackbank.pl</a></p>
                <p><i class="fas fa-phone me-2"></i>Infolinia: <strong>123-456-789</strong></p>
                <p class="text-muted">Dostępna od poniedziałku do piątku, 8:00 – 18:00</p>
            </div>
        </div>
    </div>

    <div class="col-md-6 mb-4">
        <div class="card dashboard-card h-100">
            <div class="card-header banking-card-header">
                <i class="fas fa-paper-plane me-2"></i>Formularz zgłoszeniowy
            </div>
            <div class="card-body">
                <form asp-action="Pomoc" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="OpisProblemu" class="form-label">Opis problemu</label>
                        <textarea class="form-control" id="OpisProblemu" name="OpisProblemu" rows="4" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="Zalacznik" class="form-label">Załącznik (opcjonalnie)</label>
                        <input type="file" class="form-control" id="Zalacznik" name="Zalacznik">
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-paper-plane me-1"></i>Wyślij zgłoszenie
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
