<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlackBank</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/profile.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BlackBank.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    @RenderSection("Styles", required: false)
</head>
<body class="banking-body">
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark banking-nav shadow-sm">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-university me-2"></i>
                    <span class="brand-text">BlackBank</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" 
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Profile" asp-action="Profil">
                                <i class="fas fa-user-circle me-1"></i> Profil
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Profile" asp-action="HistoriaPrzelewow">
                                <i class="fas fa-history me-1"></i> Historia transakcji
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-asp-controller="Profile" asp-action="Przelew">
                                <i class="fas fa-exchange-alt me-1"></i> Wykonaj przelew
                            </a>                            
                            
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i> Strona główna
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle user-menu" href="#" id="userMenu" role="button" 
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user-circle me-1"></i> Moje konto
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                                <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-1"></i> Ustawienia</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-lock me-1"></i> Bezpieczeństwo</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-controller="Home" asp-action="Wyloguj" method="post">
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="fas fa-sign-out-alt me-1"></i> Wyloguj się
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container banking-container mt-4">
        <div class="row">
            <div class="col-md-3 mb-4">
                <div class="card sidebar-card">
                    <div class="card-header banking-card-header">
                        <i class="fas fa-th-list me-2"></i> Menu
                    </div>
                    <div class="list-group list-group-flush">
                        <a href="#" class="list-group-item list-group-item-action active">
                            <i class="fas fa-tachometer-alt me-2"></i> Dashboard
                        </a>
                        <a href="#" class="list-group-item list-group-item-action">
                            <i class="fas fa-wallet me-2"></i> Moje konta
                        </a>
                        <a href="#" class="list-group-item list-group-item-action">
                            <i class="fas fa-credit-card me-2"></i> Karty płatnicze
                        </a>
                        <a href="#" class="list-group-item list-group-item-action">
                            <i class="fas fa-hand-holding-usd me-2"></i> Kredyty
                        </a>
                        <a href="#" class="list-group-item list-group-item-action">
                            <i class="fas fa-file-invoice-dollar me-2"></i> Rachunki
                        </a>
                        <a href="#" class="list-group-item list-group-item-action">
                            <i class="fas fa-piggy-bank me-2"></i> Oszczędności
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <footer class="footer text-white py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5><i class="fas fa-university me-2"></i> BlackBank</h5>
                    <p class="small">Każdy hazardzista kończy przed największą wygraną</p>
                </div>
                <div class="col-md-4">
                    <h5>Linki</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="footer-link"><i class="fas fa-angle-right me-1"></i> O nas</a></li>
                        <li><a href="#" class="footer-link"><i class="fas fa-angle-right me-1"></i> Kontakt</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Privacy" class="footer-link"><i class="fas fa-angle-right me-1"></i> Polityka prywatności</a></li>
                        <li><a href="#" class="footer-link"><i class="fas fa-angle-right me-1"></i> Regulamin</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5>Kontakt</h5>
                    <address class="small mb-0">
                        <i class="fas fa-map-marker-alt me-1"></i>Juchnowiec Kościelny 16-061<br>
                        <i class="fas fa-phone me-1"></i> +48 123 456 789<br>
                        <i class="fas fa-envelope me-1"></i> <a href="mailto:kontakt@blackbank.pl" class="footer-link">kontakt@blackbank.pl</a>
                    </address>
                </div>
            </div>
            <hr class="mt-4 mb-3 footer-divider">
            <div class="row">
                <div class="col-md-6 small">
                    &copy; 2025 - BlackBank - Wszelkie prawa zastrzeżone
                </div>
                <div class="col-md-6 text-md-end">
                    <a href="#" class="me-3 social-icon"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="me-3 social-icon"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="me-3 social-icon"><i class="fab fa-instagram"></i></a>
                    <a href="#" class="social-icon"><i class="fab fa-linkedin-in"></i></a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>